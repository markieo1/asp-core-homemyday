@model PaginatedList<Page>
	<div class="container">
		<div class="row p-t-51 m-b-20">
			<div class="col-md-12">
				<div class="dropdown pull-right">
					<button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
						@Model.PageSize
						<span class="caret"></span>
					</button>
					<ul class="dropdown-menu">
						<li>
							<a asp-area="CMS"
							   asp-action="Index"
							   asp-route-page="@(Model.PageIndex)"
							   asp-route-pageSize="5"
							   asp-controller="Pages">5</a>
						</li>
						<li>
							<a asp-area="CMS"
							   asp-action="Index"
							   asp-route-page="@(Model.PageIndex)"
							   asp-route-pageSize="10"
							   asp-controller="Pages">10</a>
						</li>
						<li>
							<a asp-area="CMS"
							   asp-action="Index"
							   asp-route-page="@(Model.PageIndex)"
							   asp-route-pageSize="25"
							   asp-controller="Pages">25</a>
						</li>
						<li>
							<a asp-area="CMS"
							   asp-action="Index"
							   asp-route-page="@(Model.PageIndex)"
							   asp-route-pageSize="50"
							   asp-controller="Pages">50</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="container">
			<div class="col-md-12">
				<div class="table-responsive">
					<table class="table table-bordered table-hover">
						<thead>
							<tr>
								<th>
									Page
								</th>
								<th>
									Title
								</th>
								<th>
									Content
								</th>
								<th>
									Edit
								</th>
							</tr>
						</thead>
						<tbody>
						<tbody>
							@foreach (Page pages in Model)
							{
								<tr>
									<td>
										@pages.Page_Name
									</td>
									<td>
										@Html.DisplayFor(x => pages.Title)
									</td>
									<td>
										@pages.Content.Truncate(250)
									</td>
									<td>
										<a asp-area="CMS"
										   asp-controller="Pages"
										   asp-action="Edit"
										   asp-route-id="@pages.Id"
										   class="btn btn-block btn-default">
											<i class="fa fa-pencil-square-o"></i> Edit
										</a>
									</td>
								</tr>}
						</tbody>
					</table>
				</div>
				@{
				var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
				var nextDisabled = !Model.HasNextPage ? "disabled" : "";
				}
				<nav aria-label="Search results pages">
					<ul class="pagination">
						<li class="@prevDisabled">
							@if (Model.HasPreviousPage)
							{
								<a asp-area="CMS"
								   asp-action="Index"
								   asp-route-page="@(Model.PageIndex - 1)"
								   asp-route-pageSize="@Model.PageSize"
								   asp-controller="Pages"
								   aria-label="Previous">
									<span aria-hidden="true">&laquo;</span>
								</a>}
							else
							{
								<span aria-hidden="true" aria-label="Previous">&laquo;</span>}
						</li>

						@for (int i = Model.StartPage; i <= Model.EndPage; i++)
						{
							<li class="@(Model.PageIndex == i ? "active" : "")">
								<a asp-area="CMS"
								   asp-action="Index"
								   asp-route-page="@i"
								   asp-route-pageSize="@Model.PageSize"
								   asp-controller="Pages">
									@i
									@if (Model.PageIndex == i)
									{<span class="sr-only">(current)</span>}
								</a>
							</li>}


						<li class="@nextDisabled">
							@if (Model.HasNextPage)
							{
								<a asp-area="CMS"
								   asp-action="Index"
								   asp-route-page="@(Model.PageIndex + 1)"
								   asp-route-pageSize="@Model.PageSize"
								   asp-controller="Pages"
								   aria-label="Next">
									<span aria-hidden="true">&raquo;</span>
								</a>                        }
							else
							{
								<span aria-hidden="true" aria-label="Next">&raquo;</span>}
						</li>
					</ul>
				</nav>
			</div>
		</div>
	</div>