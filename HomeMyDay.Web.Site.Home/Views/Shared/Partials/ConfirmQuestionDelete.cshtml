@model FaqQuestion

<div class="modal fade" id="ConfirmQuestionDelete@(Model.Id)" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title text-center">Bevestig verwijdering</h4>
			</div>
			<div class="modal-body">
				<p>Weet u zeker dat u "@Model.Question" wilt verwijderen?</p>
			</div>
			<div class="modal-footer">
				<form asp-area="CMS" asp-action="DeleteQuestion" asp-controller="Faq" asp-route-id="@Model.Id" asp-route-categoryId="@Model.Category.Id" method="post">
					<button class="btn btn-primary" type="submit">Ja</button>
					<button type="button" class="btn btn-default" data-dismiss="modal">Nee</button>
				</form>
			</div>
		</div>
	</div>
</div>
