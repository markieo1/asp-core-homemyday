@using Microsoft.Extensions.Options;
@using HomeMyDay.Web.Base.Extensions;
@model Accommodation

@inject IOptions<RedirectExtension> OptionsApplicationConfiguration

<div class="col-sm-3">
    <a asp-area="" asp-controller="Accommodation" asp-action="Detail" asp-route-id="@Model.Id">
        <div class="thumbnail">
            @if (Model.Images.Count > 0)
            {
                <img src="@OptionsApplicationConfiguration.Value.NodeIp/api/v1/images/@Model.Images[0].Filename">
            }

            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <div class="caption">
                    <p>@Model.Description.Truncate(75)</p>
                </div>
            }
        </div>
    </a>
</div>
